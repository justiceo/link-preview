{
  "name": "search-preview",
  "version": "0.0.1",
  "description": "Smooth previews of links and search results",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "start:chrome": "gulp ChromeDemo",
    "start:firefox": "web-ext run --source-dir ./extension/",
    "package": "ng build --configuration=development && webpack --config webpack.config.js --env development && zip -r dist/audate-dev.zip dist/audate",
    "package-prod": "ng build --configuration=production && webpack --config webpack.config.js --env production && zip -r dist/audate-prod.zip dist/audate",
    "prettier": "prettier --write \"src/**/*.{js,json,css,scss,less,md,ts,html}\""
  },
  "private": true,
  "author": "Justice Ogbonna",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/justiceo/search-preview"
  },
  "keywords": [
    "chrome",
    "firefox",
    "addon",
    "extension",
    "voice",
    "search",
    "recording",
    "notes"
  ],
  "dependencies": {
    "@angular/animations": "^14.0.6",
    "@angular/cdk": "^14.0.5",
    "@angular/common": "^14.0.6",
    "@angular/compiler": "^14.0.6",
    "@angular/core": "^14.0.6",
    "@angular/elements": "^14.0.6",
    "@angular/forms": "^14.0.6",
    "@angular/platform-browser": "^14.0.6",
    "@angular/platform-browser-dynamic": "^14.0.6",
    "@angular/router": "^14.0.6",
    "@floating-ui/dom": "^1.0.0",
    "@sentry/angular": "^6.19.7",
    "@sentry/browser": "^6.18.1",
    "@sentry/tracing": "^6.19.7",
    "primeflex": "^3.1.3",
    "primeicons": "^5.0.0",
    "primeng": "^14.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "peerDependencies": {
    "primeicons": "^5.0.0",
    "primeng": "^14.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.6",
    "@angular-eslint/builder": "14.0.2",
    "@angular-eslint/eslint-plugin": "14.0.2",
    "@angular-eslint/eslint-plugin-template": "14.0.2",
    "@angular-eslint/schematics": "14.0.2",
    "@angular-eslint/template-parser": "14.0.2",
    "@angular/cli": "^14.0.6",
    "@angular/compiler-cli": "^14.0.6",
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/register": "^7.18.9",
    "@types/chrome": "^0.0.181",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "gulp": "^4.0.2",
    "jasmine-core": "~4.0.0",
    "jimp": "^0.16.1",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "prettier": "^2.6.2",
    "ts-loader": "^9.2.9",
    "typescript": "~4.6.2",
